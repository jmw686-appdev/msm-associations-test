<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors/<%= @actor.id %>/edit">
  Edit actor
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image url
  </dt>
  <dd>
    <img src="<%= @actor.image_url %>" width="320">
  </dd>
  
  <dt>
    Number of films
  </dt>
  <dd>
    <%= @actor.characters.count %>
  </dd>

</dl>

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">
  Delete actor
</a>
<%= link_to "Delete actor", delete_actor_path(@actor.id) %>

<hr>

<a href="/actors">
  Go back
</a>
<div class="card mt-3 mb-5">
  <div class="card-reader">
    Filmography
  </div>
  <ul>
    <% @movies.each do |movie| %>
      <li class="list-group-item">
        <%= link_to movie.title, movie_path(movie.id) %>
      </li>
    
    <% end %>
    <form action="<%= create_character_path %>"  method="post">
    <!-- Label and input for movie_id -->
    <div class="form-group">
      <label for="movie_id">
        Movie
      </label>
  
      <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, Character.find_by(actor_id: @actor.id).try(:movie_id)), :class => "form-control") %>  </div>
  
    <!-- Label and input for name -->
    <div class="form-group">
      <label for="name">
        Name
      </label>
  
      <input type="text" id="name" name="name" class="form-control" >
    </div>  
    <div class="form-group">
  
      <input type="hidden" name="actor_id" class="form-control" value="<%= @actor.id %>">
    </div>
  
    <button class="btn btn-block btn-outline-secondary">
      Create character
    </button>
  </form>
  </ul>
</div>