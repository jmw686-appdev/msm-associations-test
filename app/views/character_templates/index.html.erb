<h1>
  All characters
</h1>

<a href="/characters/new">
  Add a new character
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Movie
    </th>

    <th>
      Actor
    </th>

    <th>
      Name
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @characters.each do |character| %>

  <tr>
    <td>
      <%= character.id %>
    </td>

    <td>
      <%= link_to Movie.find(character.movie_id).title, movie_path(character.movie_id) %>
    </td>

    <td>
      <<%= link_to Actor.find(character.actor_id).name, actor_path(character.actor_id) %>
    </td>

    <td>
      <%= character.name %>
    </td>

    <td>
      <%= time_ago_in_words(character.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(character.updated_at) %> ago
    </td>

    <td>
      <a href="/characters/<%= character.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
