  <!-- Label and input for actor_id -->
  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>

    <%= select_tag("actor_id", options_from_collection_for_select(Actor.all, :id, :name, Character.find_by(movie_id: @movie.id).try(:actor_id)), :class => "form-control") %>  </div>

