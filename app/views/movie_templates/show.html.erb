<h1>
  Movie #<%= @movie.id %> details
</h1>

<a href="/movies/<%= @movie.id %>/edit">
  Edit movie
</a>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @movie.image_url %>" width="320">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <%= @movie.director.name %>
  </dd>

</dl>

<a href="/delete_movie/<%= @movie.id %>" class="btn btn-danger">
  Delete movie
</a>

<hr>

<a href="/movies">
  Go back
</a>

<div>
  <div>
    Cast
  </div>
  <ul>
    <% @characters.each do |chara|%>
      <li>
        <%= link_to Actor.find(chara.actor_id).name, actor_path(chara.actor_id) %>
        (<%= chara.name %>)
      </li>
    <% end %>
  </ul>
  <div>
    Add a new character to this movie
  </div>
